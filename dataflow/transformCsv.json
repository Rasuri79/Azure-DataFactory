{
	"name": "transformCsv",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "dataflowsource",
						"type": "DatasetReference"
					},
					"name": "sourceCsv"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AggregateDataset",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "selectCols"
				},
				{
					"name": "filterRows"
				},
				{
					"name": "split"
				},
				{
					"name": "derivedColumn"
				},
				{
					"name": "aggregate"
				}
			],
			"scriptLines": [
				"source(output(",
				"          transaction_id as short,",
				"          transactional_date as timestamp,",
				"          product_id as string,",
				"          customer_id as short,",
				"          payment as string,",
				"          credit_card as long,",
				"          loyalty_card as boolean,",
				"          cost as double,",
				"          quantity as short,",
				"          price as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceCsv",
				"sourceCsv select(mapColumn(",
				"          transaction_id,",
				"          transactional_date,",
				"          product_id,",
				"          customer_id,",
				"          payment,",
				"          credit_card,",
				"          cost,",
				"          quantity,",
				"          price",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectCols",
				"selectCols filter(customer_id!=12) ~> filterRows",
				"filterRows split(payment=='visa',",
				"     payment=='mastercard',",
				"     payment=='americanexpress',",
				"     disjoint: true) ~> split@(visa, mastercard, amex)",
				"split@amex derive(payment = coalesce(payment,'N/A')) ~> derivedColumn",
				"split@visa aggregate(groupBy(customer_id),",
				"     product_id = max(product_id)) ~> aggregate",
				"aggregate sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink"
			]
		}
	}
}